@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <h1>Movies</h1>
<div id="container">
    
    <div id="results">
        @foreach (Movie movie in Model.Movies)
        {
            <div class="movie-entry">
                <h2>@movie.Title <smaller>@(movie.MPAA_Rating == null ? "" : $"({movie.MPAA_Rating})")</smaller></h2>
                <i>@movie.Major_Genre</i>
                <div class="ratings">
                    <div>
                        Rotten Tomatoes
                        <h3>@movie.Rotten_Tomatoes_Rating</h3>
                    </div>
                    @if (movie.IMDB_Rating != null)
                    {
                    <div>
                        IMBD
                        <h3>@movie.IMDB_Rating</h3>
                    </div>
                    }
                </div>
            </div>
        }
    </div>
    <form method="post">
        <input type="text" name="search" id="search" value=" @Model.search" />

        <input type="submit" value="Search" />

        <h4> MPAA Rating</h4>
        <div class="checkbox-list">
            <label>
                <input type="checkbox" name="mpaa" value="G" checked= "@Model.mpaa.Contains("G")" />
                Rated G
            </label>

            <label>
                <input type="checkbox" name="mpaa" value="PG" checked="@Model.mpaa.Contains("PG")" />
                Rated PG
            </label>

            <label>
                <input type="checkbox" name="mpaa" value="PG-13" checked="@Model.mpaa.Contains("PG-13")" />
                Rated PG-13
            </label>

            <label>
                <input type="checkbox" name="mpaa" value="R" checked="@Model.mpaa.Contains("R")" />
                Rated R
            </label>

            <label>
                <input type="checkbox" name="mpaa" value="NC-17" checked="@Model.mpaa.Contains("NC-17")" />
                Rated NC-17
            </label>
            <br />
            <label>
                Minimum IMDB Rating:
                <input type ="number" min="0" max="10" step="0.1" value= "@Model.minIMDB" name="minIMBD" />
            </label>

            <br/>
            <label>
                Maximum IMDB Rating:
                <input type="number" min="0" max="10" step="0.1" value="@Model.maxIMDB" name="maxIMDB" />
            </label>
           
        </div>
    </form>
</div>


